{
    "name": "top-api",
    "version": "0.0.1",
    "description": "",
    "author": "Vladislav Vavilikhin",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": ">=14.0.0",
        "npm": ">= 7.13.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "clear:dev": "rimraf src",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "USE_LOCAL_MONGO_HOST=true nest start",
        "start:dev": "USE_LOCAL_MONGO_HOST=true nest start --watch",
        "start:debug": "USE_LOCAL_MONGO_HOST=true nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "tslint --fix --project .",
        "test": "NODE_ENV=test jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "NODE_ENV=test USE_LOCAL_MONGO_HOST=true jest --config ./test/jest-e2e.json --detectOpenHandles",
        "prepare": "husky install"
    },
    "dependencies": {
        "@nestjs/common": "^7.5.1",
        "@nestjs/config": "^0.6.3",
        "@nestjs/core": "^7.5.1",
        "@nestjs/jwt": "^7.2.0",
        "@nestjs/passport": "^7.1.5",
        "@nestjs/platform-express": "^7.5.1",
        "@nestjs/serve-static": "^2.2.2",
        "@typegoose/typegoose": "^7.4.8",
        "@types/sharp": "^0.28.4",
        "@types/xml2js": "^0.4.9",
        "app-root-path": "^3.0.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "date-fns": "^2.22.1",
        "fs-extra": "^9.1.0",
        "mongoose": "5.10.18",
        "nestjs-typegoose": "^7.1.38",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3",
        "sharp": "^0.28.3",
        "telegraf": "^4.4.0",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.5.1",
        "@nestjs/schematics": "^7.1.3",
        "@nestjs/testing": "^7.5.1",
        "@types/app-root-path": "^1.2.4",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.8",
        "@types/fs-extra": "^9.0.12",
        "@types/jest": "^26.0.15",
        "@types/mongoose": "^5.10.3",
        "@types/multer": "^1.4.7",
        "@types/node": "^14.14.6",
        "@types/passport-jwt": "^3.0.5",
        "@types/supertest": "^2.0.10",
        "jest": "^26.6.3",
        "prettier": "^2.1.2",
        "supertest": "^6.0.0",
        "ts-jest": "^26.4.3",
        "ts-loader": "^8.0.8",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^6.1.3",
        "typescript": "^4.0.5",
        "husky": "^7.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
